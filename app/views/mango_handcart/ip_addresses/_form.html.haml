= form_for @ip_address do |f|
  - if @ip_address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ip_address.errors.count, "error")} prohibited this ip_address from being saved:"
      %ul
        - @ip_address.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :subnet_mask
    = f.text_field :subnet_mask
  .field
    = f.label :handcart
    = f.text_field :handcart
  .field
    = f.label :blacklisted
    = f.check_box :blacklisted
  .actions
    = f.submit 'Save'
